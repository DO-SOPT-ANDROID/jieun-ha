<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_friend_profile"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/girum"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_item_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기름이"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        tools:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintStart_toEndOf="@id/iv_item_friend_profile"
        tools:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_friend_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:maxLines="1"
        android:text="나는 털에 윤기가 좔좔 기름이에요"
        android:textSize="16sp"
        tools:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintStart_toEndOf="@id/tv_item_friend_name"
        tools:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>