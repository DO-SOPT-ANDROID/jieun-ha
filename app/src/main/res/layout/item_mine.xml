<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_item_mine_profile"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/my_dog"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_item_mine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="꼬식이"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        tools:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintStart_toEndOf="@id/iv_item_mine_profile"
        tools:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_mine_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:maxLines="1"
        android:text="내가 이 구역의 대표 강아지"
        android:textSize="16sp"
        tools:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintStart_toEndOf="@id/tv_item_mine_name"
        tools:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_item_mine_edit"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/ic_arrow_white_15"
        android:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_item_mine_description"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck"/>

</androidx.constraintlayout.widget.ConstraintLayout>